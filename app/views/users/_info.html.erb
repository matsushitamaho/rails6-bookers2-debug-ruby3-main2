<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>フォロー数</th>
    <td>
      <%= link_to user_followings_path(user_id: user.id) do %>
        <%= user.followings.count %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>フォロワー数</th>
    <td>
      <%= link_to user_followers_path(user_id: user.id) do %>
        <%= user.followers.count %>
      <% end %>
    </td>
  </tr>
</table>
  <% unless current_user == user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-info",method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success", method: :post %>
    <% end %>
  <% end %>

<% if current_user == user %>
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
<% end %>