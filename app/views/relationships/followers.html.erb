<h1>フォロワー</h1>
<table class="table">
  <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.get_profile_image, size:"100x100" %></td>
    <td><%= user.name %></td>
    <td>フォロー数：<%= user.followings.count %></td>
    <td>フォロワー数：<%= user.followers.count %></td>
    <td><%= link_to 'Show', user %></td>
  </tr>
  <% end %>
</table>