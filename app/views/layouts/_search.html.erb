<div class="serch_form">
  <table align="center">
    <tr>
      <div class="search_form">
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <td><%= f.text_field :word %></td>
          <td><%= f.select :range, options_for_select([['User'], ['Book']]) %></td>            <td><%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %></td>
          <td><%= f.submit "検索", class: "btn btn-primary"%></td>
        <% end %>
      </div>
    </tr>
  </table>
</div>